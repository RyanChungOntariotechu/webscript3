<div class="container">
    <!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Food</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Food"
                    name="name" required>
                </div>

                <div class="form-group">
                    <label for="descriptionTextArea">Description</label>
                    <textarea type="text" class="form-control"
                    id="descriptionTextArea"
                    placeholder="Enter the a brief description of the food"
                    name="description" required></textarea>
                </div>

                <div class="form-group">
                    <label for="publishedTextField">Calories</label>
                    <input type="number" class="form-control"
                    id="CaloriesTextField"
                    placeholder="Enter the Calories"
                    name="Calories" required>
                </div>

                <div class="form-group">
                    <label for="publishedTextField">Cost</label>
                    <input type="number" class="form-control"
                    id="costTextField"
                    placeholder="Enter the Cost"
                    name="cost" required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                    <a href="/foodtracker" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>
                

            </form>
        </div>

    </div>
</div>

